<div class="container mx-auto p-6" data-controller="neon-sign">
    <h1 class="text-3xl font-bold text-center mb-6">Create Your Neon Sign</h1>

    <div class="flex gap-8">
        <!-- Left: Input Form -->
        <div class="w-1/3">
            <%= form_with model: @neon_sign, url: neon_signs_path, method: :post, local: true do |f| %>
                <!-- Text Input -->
                <div class="mb-4">
                    <label class="block text-lg font-medium">Write Your Text:</label>
                    <%= f.text_field :text, class: "w-full p-2 border rounded", data: { neon_sign_target: "textInput", action: "input->neon-sign#updatePreview" } %>
                </div>

                <!-- Font Selector -->
                <div class="mb-4">
                    <label class="block text-lg font-medium">Font:</label>
                    <%= f.select :font, ["Sacramento", "Pacifico", "Roboto", "Lobster"], {}, class: "w-full p-2 border rounded", data: { neon_sign_target: "fontSelector", action: "change->neon-sign#updatePreview" } %>
                </div>

                <!-- Color Picker -->
                <div class="mb-4">
                    <label class="block text-lg font-medium">Color:</label>
                    <input type="color" name="neon_sign[color]" value="#FFA500" class="w-full p-2 border rounded" data-neon-sign-target="colorPicker" action="input->neon-sign#updatePreview">
                </div>

                <!-- Submit Button -->
                <%= f.submit "Create Neon Sign", class: "w-full bg-green-500 text-white py-2 rounded" %>
            <% end %>
        </div>

        <!-- Right: Live Preview -->
        <div class="w-2/3 flex justify-center items-center bg-gray-900 p-6 rounded">
            <div id="preview" class="text-6xl text-orange-400 font-sacramento" data-neon-sign-target="previewText">
                ajmalonly
            </div>
        </div>
    </div>
</div>

